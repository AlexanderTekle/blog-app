<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>mail</servlet-name>
  	<servlet-class>MailCron</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mail</servlet-name>
  	<url-pattern>/tasks/mail</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>printemail</servlet-name>
  	<servlet-class>PrintEmail</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>printemail</servlet-name>
  	<url-pattern>/printemail</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>showallposts</servlet-name>
  	<servlet-class>ShowAllPosts</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>showallposts</servlet-name>
  	<url-pattern>/showallposts</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>subscription</servlet-name>
  	<servlet-class>Subscription</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>subscription</servlet-name>
  	<url-pattern>/subscription</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>grabposts</servlet-name>
  	<servlet-class>GrabPosts</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>grabposts</servlet-name>
  	<url-pattern></url-pattern>
  </servlet-mapping>
</web-app>